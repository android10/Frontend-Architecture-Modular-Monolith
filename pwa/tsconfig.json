// Add WebWorker as a library and excluding from the 
// analysis the '.worker.ts' files that may exist in 
// the node-modules folder.

{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
        "/@/*": ["src/*"]
        },
        "lib": ["ESNext", "DOM", "WebWorker"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": [
        "dist",
        "node_modules",
        "test",
        "test.ts",
        "**/*.spec.ts",
        "**/*.worker.ts"
    ],
    "plugins": [
        {
        "name": "@vuedx/typescript-plugin-vue"
        }
    ]
}